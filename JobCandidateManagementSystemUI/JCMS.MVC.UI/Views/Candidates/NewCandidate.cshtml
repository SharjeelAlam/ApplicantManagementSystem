@using JCMS.Web.MVC.Models
@{
    ViewBag.Title = "NewCandidate";
}
@model Candidate

<h2 style="text-align:center;text-transform:capitalize">New Candidate</h2>
<div style="text-transform:uppercase;text-align:center;display:block;padding-top:15px">
    <form method="post" style="display:inline-block;margin-left:auto;margin-right:auto">
        <table style="text-align:left;font-weight:bold">
            <tr>
                <td>First Name</td>
                <td><input id="textFirstName" name="firstName"/></td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td><input id="textLastName" name="lastName"/></td>
            </tr>
            <tr>
                <td>Email Address</td>
                <td><input id="textEmailAddress" name="email"/></td>
            </tr>
            <tr>
                <td>Age</td>
                <td><input id="textAge" name="age"/></td>
            </tr>
            <tr>
                <td>City</td>
                <td><input id="textCity" name="city"/></td>
            </tr>
            <tr>
                <td>Address</td>
                <td><input id="textAddress" name="address"/></td>
            </tr>
            <tr>
                <td>Experience (Years)</td>
                <td><input id="textYearsOfExperience" name="yearsOfExperience"/></td>
            </tr>
            <tr>
                <td>Programming Language</td>
                <td><input id="textPreferredProgrammingLanguage" name="preferredProgrammingLanguage"/></td>
            </tr>
            <tr>
                <td>Applied For Position</td>
                <td>@Html.TextBoxFor(c => c.positionAppliedTo)</td>
            </tr>
            <tr>
                <td>Application Status</td>
                <td><div style="width:100%">@Html.EnumDropDownListFor(c => c.status, new { @style = "width:100%" })</div></td>
            </tr>
            <tr>
                <td></td>
                <td><button id="btnCreateNewCandidate" type="submit" style="width:100%;display:block;text-align:center">Create Candidate</button></td>
            </tr>
        </table>
    </form>
</div>

